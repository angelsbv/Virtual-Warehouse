@model IEnumerable<Almacen.Models.VentaProductos>

@{
    ViewData["Title"] = "Ventas Registradas";
}

@if (Model.Count() > 0)
{
    <h1>Ventas Registradas</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    Nombre del Producto
                </th>
                <th>
                    Nombre del Cliente
                </th>
                <th>
                    Fecha y Hora de la Venta
                </th>
                <th>
                    <a asp-action="AgregarVenta" class="btn btn-outline-success">Agregar Venta</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.producto.Nombre
                    </td>
                    <td>
                        @item.cliente.Nombre
                    </td>
                    <td>
                        @item.FechaVenta
                    </td>
                    <td>
                        <a asp-action="BorrarVenta" asp-route-id="@item.IDVenta" class="btn btn-outline-danger">Borrar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <center><h3><strong>Actualmente no existen ventas registradas, intente @Html.ActionLink("registrar una.", "AgregarVenta")</strong></h3></center>
}
